<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Actions -->

    <record id="parking_slots_action" model="ir.actions.act_window">
        <field name="name">Parking Slots</field>
        <field name="res_model">parking.slots</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Menu -->

    <menuitem id="parking_slots_menu"
              name="Parking Slots"
              action="parking_slots_action"
              parent="odoo_parking_manager.parking_manager_menu_parking"
              sequence="10"/>


    <!-- Views -->

    <record id="parking_slots_form_view" model="ir.ui.view">
        <field name="name">parking.slots.form.view</field>
        <field name="model">parking.slots</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="parking_slots_tree_view" model="ir.ui.view">
        <field name="name">parking.slots.tree.view</field>
        <field name="model">parking.slots</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>
